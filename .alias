alias gs="git status"
alias psa="ps aux | grep"
alias tarx="tar xpzvf"
alias gd="git diff"
alias gpu="git push -u origin HEAD"
alias gg="git grep"
alias sa="vim ~/.alias; source ~/.alias"

HASH="%C(yellow)%h%Creset"
RELATIVE_TIME="%Cgreen(%ar)%Creset"
AUTHOR="%C(bold blue)<%an>%Creset"
REFS="%C(red)%d%Creset"
SUBJECT="%s"

FORMAT="$HASH $RELATIVE_TIME $AUTHOR $REFS $SUBJECT"

alias glo="git log --oneline --decorate --graph --abbrev-commit --date=relative --pretty='tformat:${FORMAT}'"
alias gla="git log --all --oneline --decorate --graph --abbrev-commit --date=relative --pretty='tformat:${FORMAT}'"
